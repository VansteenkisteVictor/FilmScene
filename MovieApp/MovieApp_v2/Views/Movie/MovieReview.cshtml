@model string
@{
    ViewData["Title"] = "MovieReview";
}

<h1>MovieReview</h1>
<p>@Html.DisplayFor(Model => Model)</p>
<form action="Search" method="post" class="form-group">
    <p>Comment</p>
    <textarea class="form-control" type="text" name="comment"></textarea>
    <p>Score</p>
    <input type="range" class="custom-range" min="0" max="5" value="0" name="score"/>
    <button type="submit" class="btn btn-primary">Add review</button>
</form>

