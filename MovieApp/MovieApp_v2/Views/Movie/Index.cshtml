@model IEnumerable<Models.Search>
@{
    ViewData["Title"] = "Index";
}

<style>
    .c-allMovies {
        display: flex;
        justify-content: flex-start;
        flex-wrap: wrap;
    }

    .c-movie {
        display: flex;
        border: 1px solid rgb(204, 204, 204);
        border-radius: 3px;
        background-color: #ededed;
        margin: 20px;
    }

    .c-movie__image {
        max-height: 200px;
        margin: 5px;
    }
    .c-movie_child {
        flex: 1 0 21%;
    }
</style>

<h1>Movies</h1>
<div class="c-allMovies">
    @foreach (var item in Model)
    {
        <div class="c-movie c-movie_child justify-content-center">
            <a asp-action="MovieDetail" asp-route-id="@item.imdbID">
                <img class="c-movie__image" src="@Html.DisplayFor(modelItem => item.Poster)" />
                <div>
                    <h6>@Html.DisplayFor(modelItem => item.Title)</h6>
                    <p>@Html.DisplayFor(modelItem => item.Year) | @Html.DisplayFor(modelItem => item.Type) </p>
                </div>
            </a>
        </div>
    }
</div>
